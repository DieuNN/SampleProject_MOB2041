<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/book_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Book name Example"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/book_item_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_item_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Book's genre Example"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/book_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_item_genre"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Book's price Example"
        android:textSize="14sp" />


</RelativeLayout>